#!/bin/bash
echo "🚀 一键网络测速"

# 直接使用 Python 测速，无需下载安装
curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python3 - | awk '
/Testing from/ {print "🌐 IP地址: " $5}
/Ping:/ {print "🔄 网络延迟: " $2 " " $3}
/Download:/ {print "⬇️ 下载速度: " $2 " " $3}
/Upload:/ {print "⬆️ 上传速度: " $2 " " $3}
'

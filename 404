#!/bin/bash

# OpenResty/Nginx 403 & 404 é”™è¯¯é¡µé¢ä¸€é”®éƒ¨ç½²è„šæœ¬
# æ”¯æŒDockerç¯å¢ƒå’Œä¼ ç»Ÿå®‰è£…æ–¹å¼

set -e

# é¢œè‰²å®šä¹‰
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# æ—¥å¿—å‡½æ•°
log_info() { echo -e "${BLUE}[INFO]${NC} $1"; }
log_success() { echo -e "${GREEN}[SUCCESS]${NC} $1"; }
log_warning() { echo -e "${YELLOW}[WARNING]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }
log_debug() { echo -e "${PURPLE}[DEBUG]${NC} $1"; }

# æ£€æŸ¥è¿è¡Œç¯å¢ƒ
check_environment() {
    log_info "æ£€æŸ¥è¿è¡Œç¯å¢ƒ..."
    
    # æ£€æŸ¥æ˜¯å¦æ˜¯Dockerç¯å¢ƒ
    if docker ps &>/dev/null; then
        # æŸ¥æ‰¾Nginxæˆ–OpenRestyå®¹å™¨
        local nginx_container=$(docker ps --filter "name=nginx" --format "{{.Names}}" | head -1)
        local openresty_container=$(docker ps --filter "name=openresty" --format "{{.Names}}" | head -1)
        
        if [ -n "$openresty_container" ]; then
            log_success "æ‰¾åˆ°OpenRestyå®¹å™¨: $openresty_container"
            echo "docker:$openresty_container"
            return 0
        elif [ -n "$nginx_container" ]; then
            log_success "æ‰¾åˆ°Nginxå®¹å™¨: $nginx_container"
            echo "docker:$nginx_container"
            return 0
        else
            log_warning "æœªæ‰¾åˆ°Nginx/OpenRestyå®¹å™¨ï¼Œå°è¯•å…¶ä»–æ–¹å¼"
        fi
    fi
    
    # æ£€æŸ¥ç³»ç»Ÿå®‰è£…çš„OpenResty
    if command -v openresty &>/dev/null; then
        log_success "æ‰¾åˆ°ç³»ç»Ÿå®‰è£…çš„OpenResty"
        echo "system:openresty"
        return 0
    fi
    
    # æ£€æŸ¥ç³»ç»Ÿå®‰è£…çš„Nginx
    if command -v nginx &>/dev/null; then
        log_success "æ‰¾åˆ°ç³»ç»Ÿå®‰è£…çš„Nginx"
        echo "system:nginx"
        return 0
    fi
    
    log_error "æœªæ‰¾åˆ°Nginxæˆ–OpenResty"
    return 1
}


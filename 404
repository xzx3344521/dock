# ä¸ºDockerå®¹å™¨åˆ›å»ºNginxé…ç½®
create_docker_nginx_config() {
    local container_name="$1"
    
    log_info "ä¸ºå®¹å™¨ $container_name åˆ›å»ºNginxé”™è¯¯é¡µé¢é…ç½®..."
    
    # åˆ›å»ºé…ç½®å†…å®¹
    local config_content=$(cat << 'EOF'
# è‡ªå®šä¹‰é”™è¯¯é¡µé¢é…ç½®
error_page 403 /403.html;
error_page 404 /404.html;
error_page 500 502 503 504 /50x.html;

location = /403.html {
    root /usr/share/nginx/html;
    internal;
    allow all;
}

location = /404.html {
    root /usr/share/nginx/html;
    internal;
    allow all;
}

location = /50x.html {
    root /usr/share/nginx/html;
    internal;
    allow all;
}
EOF
)

    # å°†é…ç½®å†™å…¥å®¹å™¨
    local config_path="/etc/nginx/conf.d/custom_errors.conf"
    echo "$config_content" | docker exec -i "$container_name" tee "$config_path" > /dev/null
    
    if [ $? -eq 0 ]; then
        log_success "Nginxé”™è¯¯é¡µé¢é…ç½®å·²å†™å…¥å®¹å™¨: $config_path"
    else
        log_error "æ— æ³•å†™å…¥å®¹å™¨é…ç½®"
        return 1
    fi
}

# ä¸ºç³»ç»Ÿå®‰è£…åˆ›å»ºNginxé…ç½®
create_system_nginx_config() {
    local service_type="$1"
    
    log_info "ä¸ºç³»ç»Ÿå®‰è£…çš„ $service_type åˆ›å»ºé”™è¯¯é¡µé¢é…ç½®..."
    
    local nginx_conf_dir=""
    case "$service_type" in
        "openresty")
            nginx_conf_dir="/usr/local/openresty/nginx/conf"
            if [ ! -d "$nginx_conf_dir" ]; then
                nginx_conf_dir="/etc/openresty"
            fi
            ;;
        "nginx")
            nginx_conf_dir="/etc/nginx"
            ;;
    esac
    
    if [ ! -d "$nginx_conf_dir" ]; then
        log_error "æ‰¾ä¸åˆ°é…ç½®ç›®å½•: $nginx_conf_dir"
        return 1
    fi
    
    local config_path="$nginx_conf_dir/conf.d/custom_errors.conf"
    
    # åˆ›å»ºé…ç½®å†…å®¹
    local config_content=$(cat << EOF
# è‡ªå®šä¹‰é”™è¯¯é¡µé¢é…ç½®
error_page 403 /403.html;
error_page 404 /404.html;
error_page 500 502 503 504 /50x.html;

location = /403.html {
    root /usr/share/nginx/html;
    internal;
    allow all;
}

location = /404.html {
    root /usr/share/nginx/html;
    internal;
    allow all;
}

location = /50x.html {
    root /usr/share/nginx/html;
    internal;
    allow all;
}
EOF
)

    # å†™å…¥é…ç½®
    mkdir -p "$(dirname "$config_path")"
    echo "$config_content" > "$config_path"
    log_success "Nginxé”™è¯¯é¡µé¢é…ç½®å·²åˆ›å»º: $config_path"
}

# æµ‹è¯•é…ç½®
test_config() {
    local env_type="$1"
    local target="$2"
    
    log_info "æµ‹è¯•é…ç½®..."
    
    case "$env_type" in
        "docker")
            if docker exec "$target" nginx -t; then
                log_success "Dockerå®¹å™¨é…ç½®æµ‹è¯•é€šè¿‡"
                return 0
            else
                log_error "Dockerå®¹å™¨é…ç½®æµ‹è¯•å¤±è´¥"
                return 1
            fi
            ;;
        "system")
            if sudo nginx -t 2>/dev/null || sudo openresty -t 2>/dev/null; then
                log_success "ç³»ç»ŸæœåŠ¡é…ç½®æµ‹è¯•é€šè¿‡"
                return 0
            else
                log_error "ç³»ç»ŸæœåŠ¡é…ç½®æµ‹è¯•å¤±è´¥"
                return 1
            fi
            ;;
    esac
}

# é‡æ–°åŠ è½½æœåŠ¡
reload_service() {
    local env_type="$1"
    local target="$2"
    
    log_info "é‡æ–°åŠ è½½æœåŠ¡..."
    
    case "$env_type" in
        "docker")
            if docker exec "$target" nginx -s reload; then
                log_success "Dockerå®¹å™¨é…ç½®å·²é‡æ–°åŠ è½½"
                return 0
            else
                log_error "Dockerå®¹å™¨é‡æ–°åŠ è½½å¤±è´¥"
                return 1
            fi
            ;;
        "system")
            if systemctl reload nginx 2>/dev/null || systemctl reload openresty 2>/dev/null || nginx -s reload 2>/dev/null; then
                log_success "ç³»ç»ŸæœåŠ¡é…ç½®å·²é‡æ–°åŠ è½½"
                return 0
            else
                log_error "ç³»ç»ŸæœåŠ¡é‡æ–°åŠ è½½å¤±è´¥"
                return 1
            fi
            ;;
    esac
}

# æ˜¾ç¤ºå®Œæˆä¿¡æ¯
show_completion() {
    local env_type="$1"
    local target="$2"
    
    echo
    log_success "æ—¥ç³»åŠ¨æ¼«é£æ ¼403 & 404é”™è¯¯é¡µé¢éƒ¨ç½²å®Œæˆï¼"
    echo
    log_info "éƒ¨ç½²è¯¦æƒ…ï¼š"
    log_info "- 403é¡µé¢: /boot/data/dataxn/403.html"
    log_info "- 404é¡µé¢: /boot/data/dataxn/404.html"
    
    case "$env_type" in
        "docker")
            log_info "- å®¹å™¨åç§°: $target"
            log_info "- é…ç½®è·¯å¾„: /etc/nginx/conf.d/custom_errors.conf"
            ;;
        "system")
            log_info "- æœåŠ¡ç±»å‹: $target"
            log_info "- é…ç½®è·¯å¾„: /etc/nginx/conf.d/custom_errors.conf"
            ;;
    esac
    
    echo
    log_info "æµ‹è¯•æ–¹æ³•ï¼š"
    log_info "403æµ‹è¯•: curl http://ä½ çš„åŸŸå/ç¦æ­¢è®¿é—®çš„è·¯å¾„"
    log_info "404æµ‹è¯•: curl http://ä½ çš„åŸŸå/ä¸å­˜åœ¨çš„é¡µé¢"
    echo
    log_success "ç°åœ¨æ‚¨çš„OpenResty/Nginxå°†æ˜¾ç¤ºç¾è§‚çš„æ—¥ç³»åŠ¨æ¼«é£æ ¼é”™è¯¯é¡µé¢ï¼"
}

# ä¸»å‡½æ•°
main() {
    echo
    log_info "å¼€å§‹éƒ¨ç½²æ—¥ç³»åŠ¨æ¼«é£æ ¼403 & 404é”™è¯¯é¡µé¢..."
    echo
    
    # æ£€æŸ¥ç¯å¢ƒ
    local env_info=$(check_environment)
    if [ $? -ne 0 ]; then
        exit 1
    fi
    
    local env_type=$(echo "$env_info" | cut -d: -f1)
    local target=$(echo "$env_info" | cut -d: -f2)
    
    log_debug "ç¯å¢ƒç±»å‹: $env_type, ç›®æ ‡: $target"
    
    # åˆ›å»ºé”™è¯¯é¡µé¢
    create_403_page
    create_404_page
    
    # åˆ›å»ºé…ç½®
    case "$env_type" in
        "docker")
            create_docker_nginx_config "$target"
            ;;
        "system")
            create_system_nginx_config "$target"
            ;;
    esac
    
    # æµ‹è¯•å¹¶é‡æ–°åŠ è½½
    if test_config "$env_type" "$target"; then
        reload_service "$env_type" "$target"
        show_completion "$env_type" "$target"
    else
        log_error "éƒ¨ç½²å¤±è´¥ï¼Œè¯·æ£€æŸ¥é…ç½®"
        exit 1
    fi
}

# æ˜¾ç¤ºä½¿ç”¨è¯´æ˜
usage() {
    echo "OpenResty/Nginx 403 & 404 é”™è¯¯é¡µé¢ä¸€é”®éƒ¨ç½²è„šæœ¬"
    echo
    echo "ä½¿ç”¨æ–¹æ³•: $0 [é€‰é¡¹]"
    echo
    echo "é€‰é¡¹:"
    echo "  -h, --help    æ˜¾ç¤ºæ­¤å¸®åŠ©ä¿¡æ¯"
    echo "  -i, --install æ‰§è¡Œå®‰è£…éƒ¨ç½²"
    echo
    echo "æ”¯æŒç¯å¢ƒ:"
    echo "  - Dockerå®¹å™¨ (Nginx/OpenResty)"
    echo "  - ç³»ç»Ÿå®‰è£… (Nginx/OpenResty)"
    echo
    echo "ç¤ºä¾‹:"
    echo "  $0 --install  éƒ¨ç½²403å’Œ404é¡µé¢"
}

# å‚æ•°å¤„ç†
case "${1:-}" in
    -h|--help)
        usage
        exit 0
        ;;
    -i|--install|"")
        main
        ;;
    *)
        log_error "æœªçŸ¥é€‰é¡¹: $1"
        usage
        exit 1
        ;;

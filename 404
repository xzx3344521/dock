# é…ç½®Nginx
configure_nginx() {
    local nginx_conf_dir="/etc/nginx"
    local sites_available_dir="$nginx_conf_dir/sites-available"
    local sites_enabled_dir="$nginx_conf_dir/sites-enabled"
    
    log_info "æ­£åœ¨é…ç½®Nginx..."
    
    # æ£€æŸ¥é…ç½®ç›®å½•æ˜¯å¦å­˜åœ¨
    if [[ ! -d "$sites_available_dir" ]]; then
        log_error "Nginxé…ç½®ç›®å½•ä¸å­˜åœ¨: $sites_available_dir"
        log_info "è¯·ç¡®ä¿Nginxå·²æ­£ç¡®å®‰è£…"
        exit 1
    fi
    
    # æŸ¥æ‰¾ä¸»è¦çš„Nginxé…ç½®æ–‡ä»¶
    local main_config=""
    if [[ -f "$nginx_conf_dir/nginx.conf" ]]; then
        main_config="$nginx_conf_dir/nginx.conf"
    fi
    
    # åœ¨httpå—ä¸­æ·»åŠ 404é…ç½®
    if [[ -n "$main_config" ]]; then
        # å¤‡ä»½åŸé…ç½®
        cp "$main_config" "$main_config.backup.$(date +%Y%m%d%H%M%S)"
        log_info "å·²å¤‡ä»½åŸé…ç½®: $main_config.backup.*"
        
        # æ£€æŸ¥æ˜¯å¦å·²å­˜åœ¨404é…ç½®
        if grep -q "error_page 404" "$main_config"; then
            log_warning "404é…ç½®å·²å­˜åœ¨ï¼Œå°†æ›´æ–°é…ç½®"
            # å¯ä»¥åœ¨è¿™é‡Œæ·»åŠ æ›´æ–°é€»è¾‘
        else
            # åœ¨httpå—ä¸­æ·»åŠ 404é…ç½®
            sed -i '/http {/a\\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /usr/share/nginx/html;\n\t\tinternal;\n\t}' "$main_config"
            log_success "å·²åœ¨ä¸»é…ç½®æ–‡ä»¶ä¸­æ·»åŠ 404é…ç½®"
        fi
    fi
    
    # ä¸ºæ¯ä¸ªç«™ç‚¹é…ç½®æ·»åŠ 404é¡µé¢
    for config_file in "$sites_available_dir"/*; do
        if [[ -f "$config_file" ]]; then
            local config_name=$(basename "$config_file")
            log_info "å¤„ç†ç«™ç‚¹é…ç½®: $config_name"
            
            # å¤‡ä»½åŸé…ç½®
            cp "$config_file" "$config_file.backup.$(date +%Y%m%d%H%M%S)"
            
            # æ£€æŸ¥æ˜¯å¦å·²å­˜åœ¨404é…ç½®
            if ! grep -q "error_page 404" "$config_file"; then
                # åœ¨serverå—ä¸­æ·»åŠ 404é…ç½®
                sed -i '/server {/a\\terror_page 404 /404.html;' "$config_file"
                sed -i '/error_page 404/a\\tlocation = /404.html {\n\t\troot /usr/share/nginx/html;\n\t\tinternal;\n\t}' "$config_file"
                log_success "å·²ä¸º $config_name æ·»åŠ 404é…ç½®"
            else
                log_info "$config_name å·²æœ‰404é…ç½®ï¼Œè·³è¿‡"
            fi
        fi
    done
}

# æµ‹è¯•Nginxé…ç½®
test_nginx() {
    log_info "æµ‹è¯•Nginxé…ç½®..."
    if nginx -t; then
        log_success "Nginxé…ç½®æµ‹è¯•é€šè¿‡"
        return 0
    else
        log_error "Nginxé…ç½®æµ‹è¯•å¤±è´¥"
        return 1
    fi
}

# é‡æ–°åŠ è½½Nginx
reload_nginx() {
    log_info "é‡æ–°åŠ è½½Nginxé…ç½®..."
    if systemctl reload nginx; then
        log_success "Nginxå·²é‡æ–°åŠ è½½"
        return 0
    else
        log_error "Nginxé‡æ–°åŠ è½½å¤±è´¥"
        return 1
    fi
}

# æ˜¾ç¤ºå®Œæˆä¿¡æ¯
show_completion() {
    echo
    log_success "æ—¥ç³»åŠ¨æ¼«é£æ ¼404é¡µé¢éƒ¨ç½²å®Œæˆï¼"
    echo
    log_info "éƒ¨ç½²è¯¦æƒ…ï¼š"
    log_info "- 404é¡µé¢ä½ç½®: /usr/share/nginx/html/404.html"
    log_info "- Nginxé…ç½®å·²æ›´æ–°"
    log_info "- æ‰€æœ‰ç«™ç‚¹ç°åœ¨éƒ½ä¼šæ˜¾ç¤ºè‡ªå®šä¹‰404é¡µé¢"
    echo
    log_info "æ‚¨å¯ä»¥é€šè¿‡è®¿é—®ä¸€ä¸ªä¸å­˜åœ¨çš„URLæ¥æµ‹è¯•404é¡µé¢"
    log_info "ä¾‹å¦‚: curl -I http://your-domain/not-exist-page"
    echo
}

# ä¸»å‡½æ•°
main() {
    echo
    log_info "å¼€å§‹éƒ¨ç½²æ—¥ç³»åŠ¨æ¼«é£æ ¼404é¡µé¢..."
    echo
    
    # æ£€æŸ¥ç¯å¢ƒ
    check_root
    check_nginx
    
    # æ‰§è¡Œéƒ¨ç½²æ­¥éª¤
    create_404_page
    configure_nginx
    
    # æµ‹è¯•å¹¶é‡æ–°åŠ è½½Nginx
    if test_nginx; then
        reload_nginx
        show_completion
    else
        log_error "éƒ¨ç½²å¤±è´¥ï¼Œè¯·æ£€æŸ¥Nginxé…ç½®"
        exit 1
    fi
}

# æ˜¾ç¤ºä½¿ç”¨è¯´æ˜
usage() {
    echo "æ—¥ç³»åŠ¨æ¼«é£æ ¼404é¡µé¢ä¸€é”®éƒ¨ç½²è„šæœ¬"
    echo
    echo "ä½¿ç”¨æ–¹æ³•: $0 [é€‰é¡¹]"
    echo
    echo "é€‰é¡¹:"
    echo "  -h, --help    æ˜¾ç¤ºæ­¤å¸®åŠ©ä¿¡æ¯"
    echo "  -i, --install æ‰§è¡Œå®‰è£…éƒ¨ç½²"
    echo
    echo "ç¤ºä¾‹:"
    echo "  $0 --install  éƒ¨ç½²404é¡µé¢"
}

# å‚æ•°å¤„ç†
case "${1:-}" in
    -h|--help)
        usage
        exit 0
        ;;
    -i|--install|"")
        main
        ;;
    *)
        log_error "æœªçŸ¥é€‰é¡¹: $1"
        usage
        exit 1
        ;;
esac

#!/bin/bash

# æ—¥ç³»åŠ¨æ¼«é£æ ¼404é¡µé¢ä¸€é”®éƒ¨ç½²è„šæœ¬ - ä¿®å¤ç‰ˆ
# é€‚ç”¨äºNginxåå‘ä»£ç†ç¯å¢ƒ

set -e

# é¢œè‰²å®šä¹‰
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# æ—¥å¿—å‡½æ•°
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# æ£€æŸ¥Nginxæ˜¯å¦å®‰è£…ï¼ˆä¿®å¤ç‰ˆï¼‰
check_nginx() {
    log_info "æ£€æŸ¥Nginxå®‰è£…çŠ¶æ€..."
    
    # å¤šç§æ–¹å¼æ£€æŸ¥Nginx
    if command -v nginx &> /dev/null; then
        log_success "é€šè¿‡commandå‘½ä»¤æ£€æµ‹åˆ°Nginx"
        return 0
    fi
    
    if systemctl is-active --quiet nginx 2>/dev/null; then
        log_success "é€šè¿‡systemctlæ£€æµ‹åˆ°NginxæœåŠ¡æ­£åœ¨è¿è¡Œ"
        return 0
    fi
    
    if ps aux | grep -v grep | grep nginx &> /dev/null; then
        log_success "é€šè¿‡è¿›ç¨‹æ£€æµ‹åˆ°Nginxæ­£åœ¨è¿è¡Œ"
        return 0
    fi
    
    if [ -f /usr/sbin/nginx ] || [ -f /usr/local/nginx/sbin/nginx ]; then
        log_success "é€šè¿‡æ–‡ä»¶è·¯å¾„æ£€æµ‹åˆ°Nginx"
        return 0
    fi
    
    log_warning "æœªæ£€æµ‹åˆ°Nginxï¼Œä½†ç»§ç»­æ‰§è¡Œï¼ˆå¯èƒ½æ˜¯è‡ªå®šä¹‰å®‰è£…ï¼‰"
    return 0
}


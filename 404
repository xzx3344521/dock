set -e

# é¢œè‰²å®šä¹‰
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# æ—¥å¿—å‡½æ•°
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# æ£€æŸ¥rootæƒé™
check_root() {
    if [[ $EUID -eq 0 ]]; then
        log_warning "æ­£åœ¨ä½¿ç”¨rootæƒé™æ‰§è¡Œè„šæœ¬"
    else
        log_error "æ­¤è„šæœ¬éœ€è¦rootæƒé™æ¥ä¿®æ”¹Nginxé…ç½®"
        exit 1
    fi
}

# æ£€æŸ¥Nginxæ˜¯å¦å®‰è£…
check_nginx() {
    if ! command -v nginx &> /dev/null; then
        log_error "Nginxæœªå®‰è£…ï¼Œè¯·å…ˆå®‰è£…Nginx"
        exit 1
    fi
    log_success "Nginxå·²å®‰è£…"
}


# æŸ¥æ‰¾Nginxé…ç½®ç›®å½•
find_nginx_config() {
    log_info "æŸ¥æ‰¾Nginxé…ç½®ç›®å½•..."
    
    local possible_paths=(
        "/etc/nginx"
        "/usr/local/nginx/conf"
        "/usr/local/etc/nginx"
    )
    
    for path in "${possible_paths[@]}"; do
        if [ -d "$path" ]; then
            echo "$path"
            log_success "æ‰¾åˆ°Nginxé…ç½®ç›®å½•: $path"
            return 0
        fi
    done
    
    log_error "æœªæ‰¾åˆ°Nginxé…ç½®ç›®å½•"
    return 1
}

# é…ç½®Nginx
configure_nginx() {
    log_info "æ­£åœ¨é…ç½®Nginx..."
    
    local nginx_conf_dir=$(find_nginx_config)
    if [ $? -ne 0 ]; then
        log_error "æ— æ³•æ‰¾åˆ°Nginxé…ç½®ç›®å½•"
        return 1
    fi
    
    local sites_available_dir="$nginx_conf_dir/sites-available"
    local sites_enabled_dir="$nginx_conf_dir/sites-enabled"
    local conf_d_dir="$nginx_conf_dir/conf.d"
    
    # åˆ›å»º404é…ç½®ç‰‡æ®µ
    local error_conf="$nginx_conf_dir/conf.d/custom_errors.conf"
    cat > "$error_conf" << 'EOF'
# è‡ªå®šä¹‰é”™è¯¯é¡µé¢é…ç½®
error_page 404 /404.html;
error_page 500 502 503 504 /50x.html;

location = /404.html {
    root /usr/share/nginx/html;
    internal;
}

location = /50x.html {
    root /usr/share/nginx/html;
    internal;
}
EOF

    log_success "å·²åˆ›å»ºé”™è¯¯é¡µé¢é…ç½®: $error_conf"
    
    # å¦‚æœå­˜åœ¨sites-availableç›®å½•ï¼Œä¹Ÿä¸ºæ¯ä¸ªç«™ç‚¹é…ç½®
    if [ -d "$sites_available_dir" ]; then
        for config_file in "$sites_available_dir"/*; do
            if [[ -f "$config_file" && ! -L "$config_file" ]]; then
                local config_name=$(basename "$config_file")
                log_info "æ£€æŸ¥ç«™ç‚¹é…ç½®: $config_name"
                
                # å¤‡ä»½åŸé…ç½®
                cp "$config_file" "$config_file.backup.$(date +%Y%m%d%H%M%S)"
                
                # æ£€æŸ¥æ˜¯å¦å·²å­˜åœ¨404é…ç½®
                if ! grep -q "error_page 404" "$config_file"; then
                    # åœ¨serverå—ä¸­æ·»åŠ 404é…ç½®
                    if grep -q "server {" "$config_file"; then
                        sed -i '/server {/a\\n    # è‡ªå®šä¹‰é”™è¯¯é¡µé¢\n    error_page 404 /404.html;\n    location = /404.html {\n        root /usr/share/nginx/html;\n        internal;\n    }' "$config_file"
                        log_success "å·²ä¸º $config_name æ·»åŠ 404é…ç½®"
                    fi
                else
                    log_info "$config_name å·²æœ‰404é…ç½®ï¼Œè·³è¿‡"
                fi
            fi
        done
    fi
}

# æµ‹è¯•Nginxé…ç½®
test_nginx() {
    log_info "æµ‹è¯•Nginxé…ç½®..."
    if nginx -t 2>/dev/null || /usr/local/nginx/sbin/nginx -t 2>/dev/null; then
        log_success "Nginxé…ç½®æµ‹è¯•é€šè¿‡"
        return 0
    else
        log_error "Nginxé…ç½®æµ‹è¯•å¤±è´¥"
        return 1
    fi
}

# é‡æ–°åŠ è½½Nginx
reload_nginx() {
    log_info "é‡æ–°åŠ è½½Nginxé…ç½®..."
    
    # å¤šç§æ–¹å¼é‡è½½Nginx
    if systemctl reload nginx 2>/dev/null; then
        log_success "é€šè¿‡systemctlé‡æ–°åŠ è½½Nginx"
        return 0
    fi
    
    if service nginx reload 2>/dev/null; then
        log_success "é€šè¿‡serviceé‡æ–°åŠ è½½Nginx"
        return 0
    fi
    
    if nginx -s reload 2>/dev/null; then
        log_success "é€šè¿‡nginxå‘½ä»¤é‡æ–°åŠ è½½Nginx"
        return 0
    fi
    
    log_warning "æ— æ³•è‡ªåŠ¨é‡æ–°åŠ è½½Nginxï¼Œè¯·æ‰‹åŠ¨æ‰§è¡Œ: nginx -s reload"
    return 1
}

# æ˜¾ç¤ºå®Œæˆä¿¡æ¯
show_completion() {
    echo
    log_success "æ—¥ç³»åŠ¨æ¼«é£æ ¼404é¡µé¢éƒ¨ç½²å®Œæˆï¼"
    echo
    log_info "éƒ¨ç½²è¯¦æƒ…ï¼š"
    log_info "- 404é¡µé¢ä½ç½®: /usr/share/nginx/html/404.html"
    log_info "- Nginxé…ç½®å·²æ›´æ–°"
    log_info "- åˆ›å»ºäº†è‡ªå®šä¹‰é”™è¯¯é¡µé¢é…ç½®"
    echo
    log_info "æ‚¨å¯ä»¥é€šè¿‡è®¿é—®ä¸€ä¸ªä¸å­˜åœ¨çš„URLæ¥æµ‹è¯•404é¡µé¢"
    log_info "ä¾‹å¦‚: curl http://your-domain/not-exist-page"
    echo
    log_warning "å¦‚æœé¡µé¢æœªç«‹å³ç”Ÿæ•ˆï¼Œè¯·æ‰‹åŠ¨é‡å¯NginxæœåŠ¡"
}

# ä¸»å‡½æ•°
main() {
    echo
    log_info "å¼€å§‹éƒ¨ç½²æ—¥ç³»åŠ¨æ¼«é£æ ¼404é¡µé¢..."
    echo
    
    # æ£€æŸ¥ç¯å¢ƒ
    check_nginx
    
    # æ‰§è¡Œéƒ¨ç½²æ­¥éª¤
    create_404_page
    configure_nginx
    
    # æµ‹è¯•å¹¶é‡æ–°åŠ è½½Nginx
    if test_nginx; then
        reload_nginx
        show_completion
    else
        log_error "éƒ¨ç½²å¤±è´¥ï¼Œè¯·æ£€æŸ¥Nginxé…ç½®"
        exit 1
    fi
}

# æ˜¾ç¤ºä½¿ç”¨è¯´æ˜
usage() {
    echo "æ—¥ç³»åŠ¨æ¼«é£æ ¼404é¡µé¢ä¸€é”®éƒ¨ç½²è„šæœ¬ - ä¿®å¤ç‰ˆ"
    echo
    echo "ä½¿ç”¨æ–¹æ³•: $0 [é€‰é¡¹]"
    echo
    echo "é€‰é¡¹:"
    echo "  -h, --help    æ˜¾ç¤ºæ­¤å¸®åŠ©ä¿¡æ¯"
    echo "  -i, --install æ‰§è¡Œå®‰è£…éƒ¨ç½²"
    echo
    echo "ç¤ºä¾‹:"
    echo "  $0 --install  éƒ¨ç½²404é¡µé¢"
}

# å‚æ•°å¤„ç†
case "${1:-}" in
    -h|--help)
        usage
        exit 0
        ;;
    -i|--install|"")
        main
        ;;
    *)
        log_error "æœªçŸ¥é€‰é¡¹: $1"
        usage
        exit 1
        ;;
esac

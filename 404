# ‰∏∫DockerÂÆπÂô®ÂàõÂª∫NginxÈÖçÁΩÆ
create_nginx_config() {
    local container_name="$1"
    
    log_info "‰∏∫ÂÆπÂô® $container_name ÂàõÂª∫NginxÈÖçÁΩÆ..."
    
    # Ê£ÄÊü•ÂÆπÂô®ÂÜÖÁöÑNginxÈÖçÁΩÆË∑ØÂæÑ
    local nginx_conf_path="/etc/nginx/conf.d/custom_404.conf"
    
    # ÂàõÂª∫ÈÖçÁΩÆÂÜÖÂÆπ
    local config_content=$(cat << 'EOF'
# Ëá™ÂÆö‰πâ404ÈîôËØØÈ°µÈù¢ÈÖçÁΩÆ
error_page 404 /404.html;

location = /404.html {
    root /usr/share/nginx/html;
    internal;
    allow all;
}
EOF
)

    # Â∞ÜÈÖçÁΩÆÂÜôÂÖ•ÂÆπÂô®
    echo "$config_content" | docker exec -i "$container_name" tee "$nginx_conf_path" > /dev/null
    
    if [ $? -eq 0 ]; then
        log_success "NginxÈÖçÁΩÆÂ∑≤ÂÜôÂÖ•ÂÆπÂô®: $nginx_conf_path"
    else
        log_error "Êó†Ê≥ïÂÜôÂÖ•ÂÆπÂô®ÈÖçÁΩÆÔºåËØ∑Ê£ÄÊü•ÂÆπÂô®ÊùÉÈôê"
        return 1
    fi
}

# ÊµãËØïNginxÈÖçÁΩÆ
test_nginx_config() {
    local container_name="$1"
    
    log_info "ÊµãËØïÂÆπÂô®NginxÈÖçÁΩÆ..."
    
    if docker exec "$container_name" nginx -t; then
        log_success "NginxÈÖçÁΩÆÊµãËØïÈÄöËøá"
        return 0
    else
        log_error "NginxÈÖçÁΩÆÊµãËØïÂ§±Ë¥•"
        return 1
    fi
}

# ÈáçÊñ∞Âä†ËΩΩNginx
reload_nginx() {
    local container_name="$1"
    
    log_info "ÈáçÊñ∞Âä†ËΩΩÂÆπÂô®NginxÈÖçÁΩÆ..."
    
    if docker exec "$container_name" nginx -s reload; then
        log_success "NginxÈÖçÁΩÆÂ∑≤ÈáçÊñ∞Âä†ËΩΩ"
        return 0
    else
        log_error "NginxÈáçÊñ∞Âä†ËΩΩÂ§±Ë¥•"
        return 1
    fi
}

# ÊòæÁ§∫DockerÁâπÂÆö‰ø°ÊÅØ
show_docker_info() {
    local container_name="$1"
    
    echo
    log_success "Êó•Á≥ªÂä®Êº´È£éÊ†º404È°µÈù¢ÈÉ®ÁΩ≤ÂÆåÊàêÔºÅ"
    echo
    log_info "ÈÉ®ÁΩ≤ËØ¶ÊÉÖÔºö"
    log_info "- ÂÆø‰∏ªÊú∫404È°µÈù¢: /boot/data/dataxn/404.html"
    log_info "- NginxÂÆπÂô®: $container_name"
    log_info "- ÂÆπÂô®ÂÜÖÈÖçÁΩÆ: /etc/nginx/conf.d/custom_404.conf"
    echo
    log_info "ÁõÆÂΩïÊò†Â∞ÑÂÖ≥Á≥ªÔºö"
    log_info "- ÂÆø‰∏ªÊú∫: /boot/data/dataxn ‚Üí ÂÆπÂô®: (ËØ∑Ê£ÄÊü•ÊÇ®ÁöÑÂÖ∑‰ΩìÊò†Â∞ÑË∑ØÂæÑ)"
    echo
    log_info "ÊµãËØïÊñπÊ≥ïÔºö"
    log_info "1. ËÆøÈóÆ‰∏Ä‰∏™‰∏çÂ≠òÂú®ÁöÑÈ°µÈù¢: curl http://your-domain/not-exist-page"
    log_info "2. ÊàñÁõ¥Êé•Âú®ÊµèËßàÂô®‰∏≠ËÆøÈóÆ‰∏çÂ≠òÂú®ÁöÑURL"
    echo
    log_warning "Â¶ÇÊûúÊÇ®ÁöÑÁõÆÂΩïÊò†Â∞Ñ‰∏çÊòØÈªòËÆ§ÁöÑ/usr/share/nginx/htmlÔºåËØ∑ÊâãÂä®Ë∞ÉÊï¥ÈÖçÁΩÆ"
}

# ‰∏ªÂáΩÊï∞
main() {
    echo
    log_info "ÂºÄÂßã‰∏∫Docker NginxÈÉ®ÁΩ≤Êó•Á≥ªÂä®Êº´È£éÊ†º404È°µÈù¢..."
    echo
    
    # Ê£ÄÊü•DockerÁéØÂ¢É
    local container_name=$(check_docker_nginx)
    if [ $? -ne 0 ]; then
        exit 1
    fi
    
    # ÊâßË°åÈÉ®ÁΩ≤Ê≠•È™§
    create_404_page
    create_nginx_config "$container_name"
    
    # ÊµãËØïÂπ∂ÈáçÊñ∞Âä†ËΩΩNginx
    if test_nginx_config "$container_name"; then
        reload_nginx "$container_name"
        show_docker_info "$container_name"
    else
        log_error "ÈÉ®ÁΩ≤Â§±Ë¥•ÔºåËØ∑Ê£ÄÊü•NginxÈÖçÁΩÆ"
        exit 1
    fi
}

# ÊòæÁ§∫‰ΩøÁî®ËØ¥Êòé
usage() {
    echo "DockerÁéØÂ¢ÉÊó•Á≥ªÂä®Êº´È£éÊ†º404È°µÈù¢‰∏ÄÈîÆÈÉ®ÁΩ≤ËÑöÊú¨"
    echo
    echo "‰ΩøÁî®ÊñπÊ≥ï: $0 [ÈÄâÈ°π]"
    echo
    echo "ÈÄâÈ°π:"
    echo "  -h, --help    ÊòæÁ§∫Ê≠§Â∏ÆÂä©‰ø°ÊÅØ"
    echo "  -i, --install ÊâßË°åÂÆâË£ÖÈÉ®ÁΩ≤"
    echo
    echo "Á§∫‰æã:"
    echo "  $0 --install  ÈÉ®ÁΩ≤404È°µÈù¢"
}

# ÂèÇÊï∞Â§ÑÁêÜ
case "${1:-}" in
    -h|--help)
        usage
        exit 0
        ;;
    -i|--install|"")
        main
        ;;
    *)
        log_error "Êú™Áü•ÈÄâÈ°π: $1"
        usage
        exit 1
        ;;
esac

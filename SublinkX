#!/bin/bash
# 创建目录
sudo mkdir -p /data/sublinkx/{db,template,logs}
sudo chown -R $USER:$USER /data/sublinkx

# 停止并删除现有容器
docker stop sublinkx 2>/dev/null
docker rm sublinkx 2>/dev/null

# 启动新容器
docker run --name sublinkx -p 8000:8000 \
  -v /data/sublinkx/db:/app/db \
  -v /data/sublinkx/template:/app/template \
  -v /data/sublinkx/logs:/app/logs \
  -d jaaksi/sublinkx

echo "Sublinkx 已安装到 /data/sublinkx/"
echo "访问地址: http://localhost:8000"

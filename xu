# 检查 root 权限
check_root() {
if [ "$EUID" -ne 0 ]; then
        error "请使用 root 权限运行此脚本"
        info "尝试使用: sudo bash $0"
        error "❌ 请使用 root 权限运行此脚本！"
        info "💡 尝试使用: ${CYAN}sudo bash $0${NC}"
exit 1
fi
    info "✅ Root权限检查通过"
}


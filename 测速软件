#!/bin/bash
echo "Looking Glass 安装脚本"

# 检查 Docker
if ! command -v docker &> /dev/null; then
    echo "错误: 请先安装 Docker"
    exit 1
fi

# 停止并删除旧容器
docker stop looking-glass 2>/dev/null
docker rm looking-glass 2>/dev/null

# 运行新容器
docker run -d \
    --name looking-glass \
    -p 801:80 \
    --restart always \
    wikihostinc/looking-glass-server

echo "安装完成!"
echo "访问地址: http://服务器IP:801"

#!/bin/bash

# 快速安装脚本
mkdir -p intellissh/data
cd intellissh

cat > docker-compose.yml << 'EOF'
version: '3'

services:
  intellissh:
    image: clusterzx/intellissh:latest
    container_name: intellissh
    ports:
      - 8080:3000
    volumes:
      - ./data:/app/server/data
    restart: always
EOF

docker-compose up -d
echo "IntelliSSH 已启动，访问 http://localhost:8080"
